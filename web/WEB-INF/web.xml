<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <session-timeout>300</session-timeout> <!-- 12h * 60-->
        <cookie-config>
            <max-age>300</max-age> <!-- 12h * 3600 -->
        </cookie-config>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>websocket.WebSocketManager</listener-class>
    </listener>

    <filter>
        <filter-name>Encoding Filter</filter-name>
        <filter-class>web.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Encoding Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Auth Filter</filter-name>
        <filter-class>web.filters.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Auth Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

